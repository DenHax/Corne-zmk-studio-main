#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/rgb.h>

#define DEF 0
#define GAME 1
#define LWR 2
#define RSE 3
#define ADJ 4
// #define FUNC 5
// #define CONT 6

&mt { quick_tap_ms = <200>; };
&lt { quick_tap_ms = <200>; };


/ {
    behaviors {
        hml: home_row_mod_left {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "balanced";
            require-prior-idle-ms = <150>;
            tapping-term-ms = <280>;
            quick-tap-ms = <175>;
            bindings = <&kp>, <&kp>;
            hold-trigger-key-positions = <6 7 8 9 10 11 18 19 20 21 22 23 30 31 32 33 34 35>;
            hold-trigger-on-release;
        };

        hmr: home_row_mod_right {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "balanced";
            require-prior-idle-ms = <150>;
            tapping-term-ms = <280>;
            quick-tap-ms = <175>;
            bindings = <&kp>, <&kp>;
            hold-trigger-key-positions = <0 1 2 3 4 5 12 13 14 15 16 17 24 25 26  27 28 29>;
            hold-trigger-on-release;

        tdF: tap_dance_lang1 {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <100>;
            bindings = <&kp F>, <&kp LG(F11)>;
        };

        tdJ: tap_dance_lang2 {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <100>;
            bindings = <&kp J>, <&kp LG(F12)>;
        };

    //   lh_pht: left_positional_hold_tap {
    //       compatible = "zmk,behavior-hold-tap";
    //       #binding-cells = <2>;
    //       flavor = "tap-unless-interrupted";
    //       tapping-term-ms = <100>;   
    //       quick-tap-ms = <200>;
    //       bindings = <&kp>, <&kp>;
    //       hold-trigger-key-positions = <0 1 2 3 4 5>; 
    //   };
    };

    combos {
        compatible = "zmk,combos";
        ParaLeft {
            bindings = <&kp LEFT_PARENTHESIS>;
            key-positions = <3 4>;
            timeout-ms = <20>;
        };

        ParaRight {
            bindings = <&kp RIGHT_PARENTHESIS>;
            key-positions = <7 8>;
            timeout-ms = <20>;
        };

        BrakLeft {
            bindings = <&kp LEFT_BRACKET>;
            key-positions = <15 16>;
            timeout-ms = <20>;
        };

        BrakRight {
            bindings = <&kp RIGHT_BRACKET>;
            key-positions = <19 20>;
            timeout-ms = <20>;
        };

        BraceLeft {
            bindings = <&kp LEFT_BRACE>;
            key-positions = <27 28>;
            timeout-ms = <20>;
        };

        BraceRight {
            bindings = <&kp RIGHT_BRACE>;
            key-positions = <31 32>;
            timeout-ms = <20>;
        };

        DoubleQuote {
            bindings = <&kp DOUBLE_QUOTES>;
            key-positions = <14 15>;
            timeout-ms = <20>;
        };

        SingleQuote {
            bindings = <&kp APOSTROPHE>;
            key-positions = <20 21>;
            timeout-ms = <20>;
        };

        TildaSign {
            bindings = <&kp TILDE>;
            key-positions = <0 12>;
            timeout-ms = <20>;
        };

        GraveSign {
            bindings = <&kp GRAVE>;
            key-positions = <12 24>;
            timeout-ms = <20>;
        };

        MinusSign {
            bindings = <&kp MINUS>;
            key-positions = <2 3>;
            timeout-ms = <20>;
        };

        PlusSign {
            bindings = <&kp PLUS>;
            key-positions = <1 2>;
            timeout-ms = <20>;
        };

        UnderscoreSign {
            bindings = <&kp UNDERSCORE>;
            key-positions = <8 9>;
            timeout-ms = <20>;
        };

        PipeSign {
            bindings = <&kp PIPE>;
            key-positions = <9 10>;
            timeout-ms = <20>;
        };
    };
};

/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
// .-------------------------------------------------------.       .-----------------------------------------------------------.
// |  ESC  |    Q    |    W   |   E    |    R    |    T    |       |   Y   |    U    |    I    |    O    |     P    |  Fnc/[   |
// |-------+---------+--------+--------+---------+---------|       |-------+---------+---------+---------+----------+----------|
// |  SHFT |  GUI/A  |  ALT/S |CTRlL/D | SHFT/F  |    G    |       |   H   | SHFT/J  | CTRL/K  |  ALT/L  |  GUI/;   |     '    |
// |-------+---------+--------+--------+---------+---------|       |-------+---------+---------+---------+----------+----------|
// |  CTRL |    Z    |    X   |   C    |    V    |    B    |       |   N   |    M    |    ,    |    .    |     /    |     ]    |
// '--------------------------+--------+---------+---------+       |-------+---------+---------+-------------------------------'
//                            |  ALT   | TAB/LWR | RSE/SPC |       |  RET  |   BKSP  |   CONT  |
//                            '--------+---------+---------'       '-------+---------+---------'
                        bindings = <
     &kp ESC    &kp Q        &kp W          &kp E          &kp R         &kp T         &kp Y      &kp U           &kp I         &kp O        &kp P          &lt FUNC LEFT_BRACKET
     &kp LSHFT  &hml LWIN A  &hml LALT S    &hml LCTRL D   &hml LSHFT F  &kp G         &kp H      &hmr LSHFT J    &hmr LCTRL K  &hmr LALT L  &hmr LWIN SEMI &kp SQT
     &kp LCTRL  &kp Z        &kp X          &kp C          &kp V         &kp B         &kp N      &kp M           &kp COMMA     &kp DOT      &kp FSLH       &kp RBKT
                             &kp LALT &lt TAB LWR &lt RSE SPACE               &kp ENTER  &kp BSPC &lt CONT CAPS
                        >;
                };
  
  
                game_layer {
// .-------------------------------------------------------.       .-----------------------------------------------------------.
// |  ESC  |    T    |    Q   |   W    |    E    |    R    |       |   Y   |    U    |    I    |    O    |     P    |     F/[  |
// |-------+---------+--------+--------+---------+---------|       |-------+---------+---------+---------+----------+----------|
// |   G   |   SHFT  |    A   |   S    |    D    |    F    |       |   H   |    J    |    K    |    L    |     ;    |     '    |
// |-------+---------+--------+--------+---------+---------|       |-------+---------+---------+---------+----------+----------|
// |   Z   |   CTRL  |    H   |   C    |    V    |    B    |       |   N   |    M    |    ,    |    .    |     /    |     ]    |
// '--------------------------+--------+---------+---------+       |-------+---------+---------+-------------------------------'
//                            |  ALT   |   LWR   |   SPC   |       |  RET  |   BKSP  |   GUI   |
//                            '--------+---------+---------'       '-------+---------+---------'
                        bindings = <
     &kp ESC  &kp T      &kp Q        &kp W          &kp E   &kp R                        &kp Y    &kp U           &kp I         &kp O        &kp P          &lt FUNC LEFT_BRACKET
     &kp G    &kp LSHFT  &hml LWIN A  &hml LALT S    &hml LCTRL D   &hml LSHFT F          &kp H    &hmr LSHFT J    &hmr LCTRL K  &hmr LALT L  &hmr LWIN SEMI &kp SQT
     &kp Z    &kp LCTRL  &kp X        &kp C          &kp V   &kp B                        &kp N    &kp M           &kp COMMA     &kp DOT      &kp FSLH       &kp RBKT
                             &kp LALT   &mo LWR  &kp SPACE                                  &kp ENTER  &kp BSPC  &kp LWIN
                        >;
                };
                
  
                lower_layer {
// .----------------------------------------------------------.       .-----------------------------------------------------.
// |    TAB    |   1    |   2    |   3    |    4    |    5     |       |    ^   |    &   |    *    |    (   |    )   |  DEL  |
// |-----------+--------+--------+--------+---------+----------|       |--------+--------+---------+--------+--------+-------|
// |    SHFT   |   F4   |  LEFT  |   UP   |  RIGHT  |   HOME   |       | vol up |  mute  |  vol dn |        |        |   ~   |
// |-----------+--------+--------+--------+---------+----------|       |--------+--------+---------+--------+--------+-------|
// |    CTRL   | CTRL+N |   PU   |  DOWN  |    PD   |   END    |       |  prev  |  play  |   next  |        |        |   \   |
// '-----------------------------+--------+---------+----------+       |--------+--------+---------+-------------------------'
//                               |  ALT   |   **    |ADJ_ENTER |       |        |        |         |
//                               '--------+---------+----------'       '--------+--------+---------'

                        bindings = <
   &kp TAB     &kp N1    &kp N2     &kp N3    &kp N4     &kp N5          &kp CARET     &kp AMPS   &kp STAR     &kp LPAR   &kp RPAR  &kp DEL
   &kp LSHFT   &kp F4    &kp LEFT   &kp UP    &kp RIGHT  &kp HOME        &kp C_VOL_DN  &kp C_MUTE &kp C_VOL_UP &trans     &trans    &kp GRAVE
   &kp LCTRL   &kp LC(N) &kp PG_UP  &kp DOWN  &kp PG_DN  &kp END         &kp C_PREV    &kp C_PP   &kp C_NEXT   &trans     &trans    &kp BSLH
                          &kp LALT   &trans    &lt ADJ ENTER              &trans   &trans   &trans
                        >;
                };
  
  
                  raise_layer {
// .------------------------------------------------------.       .-----------------------------------------------------.
// |   F2    |    *   |    1   |    2   |    3   |    -   |       |        |   F1   |   F2   |   F3   |   F4   |   DEL  |
// |---------+--------+--------+--------+--------+--------|       |--------+--------+--------+--------+--------+--------|
// |   SHFT  |    /   |    4   |    5   |    6   |    +   |       |        |   F5   |   F6   |   F7   |   F8   |    ~   |
// |---------+--------+--------+--------+--------+--------|       |--------+--------+--------+--------+--------+--------|
// |   CTRL  |    =   |    7   |    8   |    9   |    .   |       |        |   F9   |   F10  |   F11  |   F12  |    \   |
// '---------------------------+--------+--------+--------+       |-------+---------+--------+--------------------------'
//                             |    0   |   ADJ  |  **    |       |        |        |        |
//                             '--------+--------+--------'       '--------+--------+--------'
                        bindings = <
   &kp F2     &kp KP_ASTERISK &kp N1 &kp N2 &kp N3   &kp MINUS           &trans &kp F1  &kp F2  &kp F3  &kp F4  &kp DEL
   &kp LSHFT  &kp KP_SLASH    &kp N4 &kp N5 &kp N6   &kp KP_PLUS         &trans &kp F5  &kp F6  &kp F7  &kp F8  &kp GRAVE
   &kp LCTRL  &kp EQUAL       &kp N7 &kp N8 &kp N9   &kp KP_DOT          &trans &kp F9  &kp F10 &kp F11 &kp F12 &kp BSLH
                              &kp N0        &mo ADJ  &trans              &trans &trans  &trans
                        >;
                };

                adjust_layer {
// .--------------------------------------------------------.       .---------------------------------------------------------.
// |sys_reset|  reset |  boot  |        |         |  KP_NUM |       |  GAME  |        |        |        |        | zmk-studio |
// |---------+--------+--------+--------+---------+---------|       |--------+--------+--------+--------+--------+------------|
// |         |  BT1   |  BT2   |  BT3   |  BT4    |  BT5    |       |  BT5   |  BT4   |  BT3   |  BT2   |  BT1   |            |
// |---------+--------+--------+--------+---------+---------|       |--------+--------+--------+--------+--------+------------|
// |  BTCLR  |        |        |        |         |         |       |        |        |        |        |        |            |
// '---------------------------+--------+---------+---------+       |--------+--------+--------+--------+--------+------------|
//                             |        |   **    |   ***   |       |        |        |        |
//                             '--------+---------+---------'       '--------+--------+--------'

                        bindings = <
   &sys_reset  &reset        &bootloader   &trans        &trans          &kp KP_NUM        &tog GAME     &trans        &trans        &trans        &trans        &studio_unlock
   &trans      &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3    &bt BT_SEL 4      &bt BT_SEL 4  &bt BT_SEL 3  &bt BT_SEL 2  &bt BT_SEL 1  &bt BT_SEL 0  &trans
   &bt BT_CLR  &trans        &trans        &trans        &trans          &trans            &trans        &trans        &trans        &trans        &trans        &trans
                                           &trans        &trans          &trans            &trans        &trans        &trans
                        >;
                };

